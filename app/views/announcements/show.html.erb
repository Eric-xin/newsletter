<div class="max-w-4xl mx-auto px-6 py-12">
  <a href="<%= announcements_path %>" class="inline-flex items-center gap-2 text-white/40 hover:text-white/70 text-sm mb-8 transition-colors">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
    Back to Announcements
  </a>

  <div class="glass-card-static rounded-3xl overflow-hidden">
    <div class="p-8 border-b border-white/10">
      <div class="flex items-center gap-3 mb-4">
        <span class="badge badge-public">Public</span>
        <span class="text-white/30 text-sm"><%= @newsletter.sent_at&.strftime("%B %d, %Y at %l:%M %p") %></span>
      </div>
      <h1 class="text-3xl font-bold text-white/95"><%= @newsletter.subject %></h1>
    </div>

    <div class="p-8">
      <div class="preview-frame p-8 rounded-xl">
        <%= sanitize(@newsletter.body) %>
      </div>
    </div>
  </div>
</div>
